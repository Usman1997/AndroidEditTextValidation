<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="floatlabelededittext">
        <item name="android:textColor">@color/hint_color</item>
    </style>

    <style name="MyEditTextTheme">
        <item name="colorControlNormal">@color/hint_color</item>
        <item name="colorControlActivated">@color/grey_text_color</item>
        <item name="colorControlHighlight">@color/grey_text_color </item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:textColor">@color/dark_text_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>

    </style>

</resources>
